<div class="container">
  <div class="row">
    <div class="col">
      <h1>What do you think about <%= @brain.name %>?</h1>

      <%= simple_form_for [@brain, @review] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
