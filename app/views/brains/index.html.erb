<div class="container">

  <%= link_to "Connexion", new_user_session_path %>
  <%= button_to "Deconnexion", destroy_user_session_path, data: { turbo_method: :delete } %>


  <div class="banner-brainz" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.shutterstock.com/image-illustration/cartoon-decorative-oil-painting-vibrant-260nw-1545321431.jpg);">
    <div class="container">
      <h1>Mind your business...</h1>
      <h2>Rent a brain !</h2>
    </div>
  </div>

  <div class="filter-bar">
    <div class="category">
      <i class="fa-solid fa-code"></i>
      <p>Dev Profile</p>
    </div>
    <div class="category">
      <i class="fa-regular fa-face-smile"></i>
      <p>Humor</p>
    </div>
    <div class="category">
      <i class="fa-solid fa-hands-clapping"></i>
      <p>Eloquence</p>
    </div>
    <div class="category">
      <i class="fa-solid fa-football"></i>
      <p>Sporty Mindset</p>
    </div>
    <div class="category">
      <i class="fa-solid fa-palette"></i>
      <p>Artist Soul</p>
    </div>
    <div class="filters_button">
    </div>
  </div>

  <h1>All brains</h1>
  <div class="row">
    <div class="col">

      <div class="brains-list">

        <% @brains.each do |brain| %>
          <div class="card brain-card">
            <h2><%= brain.name %></h2>

              <% if brain.photo.attached? %>
                <%= cl_image_tag(brain.photo.key, width: 200, height: 200) %>
              <% else %>
                <img src="brainzImage.png" alt="">
              <% end %>

            <h3>QI</h3>
            <p><%= brain.qi %></p>

            <h3>Language(s)</h3>
            <ul>
              <% brain.languages.each do |language| %>
                <li><%= language %></li>
              <% end %>
            </ul>

            <h3>Specialties</h3>
            <ul>
              <% brain.specialties.each do |speciality| %>
                <li><%= speciality %></li>
              <% end %>
            </ul>

            <h3>Price / Day</h3>
            <p><%= brain.price_per_day %> â‚¬</p>

            <%= link_to "More infos", brain_path(brain) %>
          <% end %>
          </div>
      </div>
    </div>
  </div>
</div>
