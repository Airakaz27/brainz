<div class="container">
  <div class="row">
    <div class="col">

  <div class="card-brain-img">
    <% if @brain.photo.attached? %>
      <%= cl_image_tag(@brain.photo.key, width: 200, height: 200) %>
    <% else %>
      <img src="brainzImage.png" alt="">
    <% end %>
  </div>

  <div class="card-brain-infos">
    <div class="card-name-qi">
      <h1><%= @brain.name %></h1>
      <h2>QI</h2>
      <p><%= @brain.qi %></p>
    </div>

    <div class="card-languages-specialties">
      <h2>Language(s)</h2>
      <ul>
        <% @brain.languages.each do |language| %>
          <li><%= language %></li>
        <% end %>
      </ul>

      <h2>Specialties</h2>
      <ul>
        <% @brain.specialties.each do |speciality| %>
          <li><%= speciality %></li>
        <% end %>
      </ul>
    </div>

    <div class="price">
      <h2>Price / Day</h2>
      <p><%= @brain.price_per_day %> â‚¬</p>
    </div>
  </div>

