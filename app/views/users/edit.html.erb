<div class="container">
  <div class="row">
    <div class="col">
      <h1>Edit your profile</h1>
      <%= simple_form_for(@user) do |f| %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :pseudo %>
        <%= f.input :email %>
        <%= f.submit "Update my profile" %>
      <% end %>
    </div>
  </div>
</div>
