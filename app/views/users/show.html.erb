<div class="container">
  <div class="row">
    <div class="col">
      <div>
        <h1>
          <%= @user.first_name %> <%= @user.last_name %>
        </h1>
        <%= link_to "Edit my profile", edit_user_path(@user) %>
        <%= link_to "Delete my profile", user_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

      </div>


        <% @brains.each do |brain| %>
          <h2><%= brain.name %></h2>

            <% if brain.photo.attached? %>
              <%= cl_image_tag(brain.photo.key, width: 200, height: 200) %>
            <% else %>
              <img src="brainzImage.png" alt="">
            <% end %>

          <h3>QI</h3>
          <p><%= brain.qi %></p>

          <h3>Language(s)</h3>
          <ul>
            <% brain.languages.each do |language| %>
              <li><%= language %></li>
            <% end %>
          </ul>

          <h3>Specialties</h3>
          <ul>
            <% brain.specialties.each do |speciality| %>
              <li><%= speciality %></li>
            <% end %>
          </ul>

          <h3>Price / Day</h3>
          <p><%= brain.price_per_day %> â‚¬</p>

          <%= link_to "More infos", brain_path(brain) %>
        <% end %>
      <%= link_to "Add a brain", new_brain_path %>
    </div>
  </div>
</div>
