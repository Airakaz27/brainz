<div class="container">
  <div class="row">
    <div class="col">
      <div>
        <h1>
          <%= @user.first_name %> <%= @user.last_name %>
        </h1>
        <%= link_to "Edit my profile", edit_user_registration_path(@user) %>
        <%= link_to "Delete my profile", cancel_user_registration_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

      </div>

        <h2>All my brains</h2>
        <% @brains.each do |brain| %>
          <div class="card">
            <h3><%= brain.name %></h3>

              <% if brain.photo.attached? %>
                <%= cl_image_tag(brain.photo.key, width: 200, height: 200) %>
              <% else %>
                <img src="brainzImage.png" alt="">
              <% end %>

            <p>QI<%= brain.qi %></p>

            <p>Language(s):</p>
            <ul>
              <% brain.languages.each do |language| %>
                <li><%= language %></li>
              <% end %>
            </ul>

            <p>Specialties:</p>
            <ul>
              <% brain.specialties.each do |speciality| %>
                <li><%= speciality %></li>
              <% end %>
            </ul>

            <p>Price / Day:<%= brain.price_per_day %> â‚¬</p>

            <%= link_to "More infos", brain_path(brain) %>
          </div>
        <% end %>
      <%= link_to "Add a brain", new_brain_path %>

      <hr>

      <h2>All my bookings</h2>
        <% @bookings.each do |booking| %>
          <div class="card">
          <h3><%= booking.brain.name %></h3>
          <p>Start date : <%= booking.start_date %></p>
          <p>End date : <%= booking.end_date %></p>
          <%= link_to "Cancel", brain_booking_path(booking.brain_id, booking) , data: { turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>
    </div>
    </div>
  </div>
</div>
